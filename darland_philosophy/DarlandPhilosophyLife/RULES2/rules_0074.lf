 corefer([Head1 | Tail1], [Head2 | Tail2]) :-
	corefer(Head1, Head2),
	corefer(Tail1, Tail2).

corefer(Head1, Head2) :-
	\+ differ_refer(Head1, Head2).

differ_refer(Head1, Head2) :-
	qqqq4(Head1, X),
	\+ qqqq4(Head2, X).
	
differ_refer(Head2, Head1) :-
	qqqq4(Head1, X),
	\+ qqqq4(Head2, X).
	
