	conceptual_feeling_words_ideas(Subject, believes,
				       Time, List),
	\+ conceptual_feeling_words_ideas(Subject,
					  believes,
					  Time,
					  List).

%% 5

conceptual_feeling_words_objects(Subject, Subjective_aim,  Time, List) :-
