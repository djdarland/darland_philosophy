%% truly_opaque_believes_words
%% could only occur if the very same goal
%% succeeded and failed to succeeed.
%% That is IMPOSSIBLE
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% 1

conceptual_feeling_words(Subject, Subjective_aim, Time, [[Relation_Word] | List]) :-
	Subjective_aim :== truly_opaque,
	conceptual_feeling_words(Subject, believes,
				 Time, List),
	\+ conceptual_feeling_words(Subject, believes,
				    Time, List).

%% 2

conceptual_feeling_in_ideas(Subject, Subjective_aim, Time, List) :-
	Subjective_aim :== truly_opaque,
	conceptual_feeling_in_ideas(Subject, believes,
				    Time, List),
	\+ conceptual_feeling_in_ideas(Subject, believes,
				       Time, List).

%% 3

conceptual_feeling_objects(Subject, Subjective_aim,  Time, List) :-
	Subjective_aim :== truly_opaque,
	conceptual_feeling_objects(Subject, believes,
				   Time, List),
	\+ conceptual_feeling_objects(Subject, believes,
			      Time, List).

%% 4

