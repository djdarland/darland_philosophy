%% Common Prolog & Life predicates to simulate Dennis J. Darlands philosophy. 
%% Started Writing 1/4/2017 
%% This is a total rewrite of what I started about 10 years ago.

%% This is to experiment with Satisfiability.
%% It is an NP-complete problem
%% See pages 320-331 in
%% _Introduction to Automata Theory, Languages and Computation_
%% By John E. Hopcroft
%% and
%% Jefferey D. Ullman

%% First convert a boolean expression to nand using Polish notation.
%% It looks to me like a binary search. So should be polynomial time!!!

boolean(A, [top, 0]).
boolean(A, [top, 1]).

persistent(visits)?
persistent(max_depth)?

satisfiable(List) :-
	visits <<- 1,
	max_depth <<- 0,
	cond(sat(List, 1),
	     (write("visits = ", visits),nl,
	      write("max_depth = ", max_depth)),
	     (write("visits = ", visits),nl,
	      write("max_depth = ", max_depth),fail)).

sat(Prop_1, Depth) :-
	cond(Depth > max_depth,
	     max_depth <<- Depth),
	Prop_1 = [top, 1].

% sat([nand, [top, 0], [top, 0]]).
% sat([nand, [top, 1], [top, 0]]).
% sat([nand, [top, 0], [top, 1]]).

%% A
sat([nand, [top, 0], Prop_2], Depth) :-
	cond(Depth > max_depth,
	     max_depth <<- Depth),
	boolean(Prop_2).

%% B
sat([nand, Prop_1, [top, 0]], Depth) :-
	cond(Depth > max_depth,
	     max_depth <<- Depth),
	boolean(Prop_1).

%% C
sat([nand, [nand, Prop_1, Prop_2], Prop_3], Depth) :-
	cond(Depth > max_depth,
	     max_depth <<- Depth),
	boolean(Prop_1),
	boolean(Prop_2),
	visits <<- visits + 1,
	\+ sat([nand, Prop_1, Prop_2], Depth + 1).

%% D
sat([nand, [nand, Prop_1, Prop_2], Prop_3], Depth) :-
	cond(Depth > max_depth,
	     max_depth <<- Depth),
	visits <<- visits + 1,
	\+ sat(Prop_3, Depth + 1).

%% E
sat([nand, Prop_1, [nand, Prop2, Prop_3]], Depth) :-
	cond(Depth > max_depth,
	     max_depth <<- Depth),
	boolean(Prop_1),
	visits <<- visits + 1,
	\+ sat(Prop_1, Depth + 1).

%% F	
sat([nand, Prop_1, [nand, Prop2, Prop_3]], Depth) :-
	cond(Depth > max_depth,
	     max_depth <<- Depth),
	boolean(Prop_2),
	boolean(Prop_3),
	visits <<- visits + 1,
	\+ sat([nand, Prop_2, Prop_3], Depth + 1).


